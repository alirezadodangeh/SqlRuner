<Window x:Class="SqlRuner.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="خطا در اجرای کوئری" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="خطای زیر رخ داده است:" 
                   FontSize="14" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <TextBox x:Name="ErrorTextBox" 
                 Grid.Row="1"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="12"
                 Padding="10"
                 Background="#FFF5F5F5"
                 BorderBrush="#FFCC0000"
                 BorderThickness="2"/>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button x:Name="CopyButton" 
                    Content="کپی خطا" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Click="CopyButton_Click"/>
            <Button x:Name="CloseButton" 
                    Content="بستن" 
                    Width="100" 
                    Height="35"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
